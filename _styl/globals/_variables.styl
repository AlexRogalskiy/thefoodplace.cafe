/*--------------------------------------------------------------------
* $VARIABLES
--------------------------------------------------------------------*/

// Font Families
$font-family-tisa = 'ff-tisa-web-pro', Georgia, serif
$font-family-brandon = 'brandon-grotesque', Helvetica, sans-serif

// Font Weights
$font-weight-light = 300
$font-weight-bold = 700

// Mixins

b(val) //b for bracket
  unquote("[") + val + unquote("]")

highlight(hue)
  font-weight: $font-weight-semibold
  display: inline-block
  background: hue
  color: white

underline(hue)
  background: linear-gradient(to top, hue 35%, transparent 35%)

// Grid

grid-col-full()
  grid-column: 1 / -1

grid-row-full()
  grid-row: 1 / -1

// Colors

white(alpha)
  rgba(255,255,255,alpha)

black(alpha)
  rgba(0,0,0,alpha)


$black = rgb(0,0,0)
$green = rgb(48,165,101)

$grey-drk = #444
$grey-med = #888
$grey-light = #ccc
$grey-lightest = #ddd


// Borders

$dashed = 1px dashed $green
$solid = 1px solid $green
$dotted = 1px dotted $green
