.froyo-flavors
  columns: 5
  font-size: .8em

  li
    margin-bottom: 5px

#partners

  h4
    margin-bottom: 10px
    padding-bottom: 5px
    font-size: .8em
    text-transform: uppercase

  .partner
    font-size: .8em

    & + h4
      margin-top: 20px

  .earth
    margin-bottom: 30px
    columns: 3
    column-gap: 30px
    > *
      break-inside: avoid

  .good-place .partner-group
    columns: 4
    column-gap: 30px

.footer
  margin-top: 30px
  padding-top: 20px
  border-top: 1px dotted

  p
    max-width: 100%
    font-size: .8em
