@import 'globals/_reset'
@import 'globals/_variables'

@page
  margin: 10%

.nav-main,
.illo
  display: none

body
  padding: 10px
  $font-tisa-light()
  font-size: 100%
  line-height: 1.4

p
  max-width: 500px
  margin: 0 auto 15px

h1, h2, h3, h4
  margin-bottom: 10px
  line-height: 1.3
  $font-brandon()

h1
  font-size: 1.6em

h2
  font-size: 1.3em

h3
  margin-bottom: 20px
  padding-bottom: 5px
  font-size: 1em
  text-transform: uppercase
  border-bottom: 1px dotted

h4
  font-size: 1.2em

small
  font-size: .8em

.emoji
  font-style: normal

section
  margin-bottom: 20px

.hero
  margin-bottom: 30px
  text-align: center

  small
    display: none

#intro
  margin-bottom: 40px
  padding: 20px
  border: 1px dashed
  text-align: center

.menu-list
  columns: 3
  column-gap: 50px

  h4
    display: none

  .menu-item
    break-inside: avoid

  .menu-item
    margin-bottom: 15px

  .name
    $font-brandon()
    line-height: 1
    font-size: .9em

  .name + .episode
    &:before
      content: ' / '

  .episode
    font-size: .8em

  .description
    display: block
    font-size: .8em

    ul
      margin-top: 10px
      margin-left: 30px
      list-style-type: disc

#hors-doeuvres,
#bottomless,
#sides,
#wine,
#dessert,
#froyo-list
  page-break-after: always

#neverending-shrimp
  // margin-top: 20px
  // columns: 2
  // column-gap: 50px
  // column-span: all
  page-break-after: always

// #fruit,
// #cake
