/*--------------------------------------------------------------------
* $BASE
--------------------------------------------------------------------*/

*, *:before, *:after
  box-sizing: border-box

::selection
  background: $black
  color: white

img
  max-width: 100%

body
  $font-tisa-light()
  font-size: 112.5%
  line-height: 1.5
  background-color: $green
  color: black

  & > .container

    @media screen and (min-width: $bp-small + 1)
      padding: 0 20px

.container
  max-width: 1200px
  margin: 0 auto

.center
  text-align: center

a
  text-decoration: none
