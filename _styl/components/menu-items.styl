/*--------------------------------------------------------------------
* $MENU ITEMS
--------------------------------------------------------------------*/

.menu-item
  display: grid
  grid-template-columns: b(item) auto b(episode) 100px
  
  &:not(:last-child)
    margin-bottom: 15px

  .name,
  .description
    grid-column: item

  .episode
    grid-column: episode
    align-self: start
    justify-self: end

  .name
    font-size: 1em

    &.featured
      margin-bottom: 20px
      font-size: 1.4em

  .description,
  .episode
    font-size: .8em

  .description > ul
    margin: 15px

  &.center
    display: block

    .name,
    .description,
    .episode
      display: block

    .episode
      margin-top: 15px
