/*--------------------------------------------------------------------
* $TYPE
--------------------------------------------------------------------*/

h2, h3, h4, p:not(:last-child), ul, pre
  margin-bottom: 30px

h1, h2, h3, h4
  line-height: 1.3
  font-family: $font-family-brandon
  font-weight: $font-weight-bold

h1
  font-size: 3.5em

  a
    color: inherit

h2
  font-size: 2em

h3
  font-size: 1.1em

h4
  font-size: 1.4em

em
  font-style: italic

small
  font-size: .8em
