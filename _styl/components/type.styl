/*--------------------------------------------------------------------
* $TYPE
--------------------------------------------------------------------*/

h2, h3, h4, p:not(:last-child), ul, pre
  margin-bottom: 30px

h1, h2, h3, h4
  line-height: 1.3
  $font-brandon()

@media screen and (min-width: $bp-small + 1)

  h1
    font-size: 3.5em

  h2
    font-size: 2em

  h3
    font-size: 1.1em

  h4
    font-size: 1.4em

@media screen and (max-width: $bp-small)

  h1
    font-size: 2em

  h2
    font-size: 1.5em

  h3
    font-size: .9em

  h4
    font-size: 1.2em

em
  font-style: italic

small
  font-size: .8em

hr
  height: 1px
  margin: 30px 0
  background: $green
  border: none

strong
  font-weight: $font-weight-medium

.emoji
  font-style: normal
