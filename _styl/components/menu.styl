/*--------------------------------------------------------------------
* $MENU
--------------------------------------------------------------------*/

.menu
  padding: 30px
  background: white
  columns: 380px
  column-gap: 50px

  @media screen and (min-width: 880px)

    .wide
      column-span: all

      .container
        display: grid
        grid-template-columns: 1fr 1fr
        grid-gap: 50px

  & + .menu
    margin-top: 20px

  section:not(:last-child)
    margin-bottom: 50px

  & > *
    break-inside: avoid-column

  h2, h3
    color: $green
    text-align: center

  h3
    padding-bottom: 10px
    text-transform: uppercase
    border-bottom: $dashed
