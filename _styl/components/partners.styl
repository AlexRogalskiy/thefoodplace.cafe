/*--------------------------------------------------------------------
* $PARTNERS
--------------------------------------------------------------------*/

#partners
  background: $grey-drk
  color: white

  @media screen and (max-width: $bp-small)
    padding: 30px 15px

  @media screen and (min-width: $bp-small + 1)
    margin-top: 20px
    padding: 40px 20px

    .container
      padding: 0 30px

  h3
    margin-bottom: 0
    font-size: .9em
    text-transform: uppercase

  h4
    margin: 30px 0 20px
    padding-bottom: 10px
    text-transform: uppercase
    font-size: .7em
    border-bottom: 1px dotted white(.2)

  .partner-group
    margin-bottom: 0

  .partner
    margin-bottom: 7px
    font-size: .7em

  .earth
    display: grid
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr))
    grid-column-gap: 50px

  .good-place
    .partner-group
      columns: 200px
      column-gap: 50px
