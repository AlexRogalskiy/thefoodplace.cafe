doctype html
html(lang='en')

  //- Variable block for page-specific info
  block vars

  head

    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='chrome=1')
    meta(name='viewport',content='width=device-width, initial-scale=1, minimum-scale=1')

    meta(name='description', content=pageDescription)
    meta(name='author', content='Lynn Fisher')

    title
      block title

    link(rel='shortcut icon', href='/assets/images/shrimp.png')

    link(rel='stylesheet', href='https://use.typekit.net/snm1pqg.css')

    link(rel='stylesheet', media='screen', href='/assets/css/main.css')
    link(rel='stylesheet', media='print', href='/assets/css/print.css')

    meta(property='og:site_name', content='The Food Place')
    meta(property='og:url', content='https://thefoodplace.cafe')
    meta(property='og:description', content='All the food, drink, and restaurants you remember from the television show “The Good Place.”')
    meta(property='og:image', content='https://thefoodplace.cafe/assets/images/social-the-food-place.png')
    meta(property='og:type', content='website')
    meta(property='og:image:width', content='1200')
    meta(property='og:image:height', content='630')

    meta(name='twitter:card', content='summary_large_image')
    meta(name='twitter:creator', content='@lynnandtonic')
    meta(property='twitter:title', content='The Food Place')
    meta(property='twitter:description', content='All the food, drink, and restaurants you remember from the television show “The Good Place.”')
    meta(property='twitter:image', content='https://thefoodplace.cafe/assets/images/social-the-food-place.png')

    include includes/_ga.html

    block scripts

  body(class=bodyClass)

    block content
